{
  "name": "gilgalcare-whatsapp-bot",
  "version": "0.1.3",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "bun build ./src/index.ts --outdir dist --target bun --format esm --watch",
    "watch-dev": "bun run nodemon",
    "start": "NODE_ENV=production bun build/index.js",
    "pm2:start": "pm2 start pm2.config.js",
    "build": "bun build ./src/index.ts --outdir dist --target bun --format esm",
    "clean": "rmdir -r dist"
  },
  "keywords": [
    "whatsapp",
    "bot"
  ],
  "author": "Stefan Dharmawan <stefanwork12@gmail.com> (https://github.com/TepanD)",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@types/qrcode-terminal": "^0.12.2",
    "dotenv-safe": "^9.1.0",
    "googleapis": "^140.0.1",
    "qrcode-terminal": "^0.12.0",
    "typescript": "^5.0.0",
    "whatsapp-web.js": "^1.25.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/dotenv-safe": "^8.1.6",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "ts-node-dev": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}